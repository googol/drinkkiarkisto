<% include head %>
<div class="container">
  <h1>Muokataan drinkkiä: Karpalobooli</h1>
  <form action="/drinks/2/" method="post" class="form-horizontal">
    <div class="form-group">
      <label for="drink-name" class="col-sm-2 control-label">Drinkin nimi</label>
      <div class="col-sm-8">
        <input type="text" class="form-control" id="drink-name" value="Karpalobooli" />
      </div>
    </div>
    <div class="form-group">
      <label for="drink-preparation" class="col-sm-2 control-label">Valmistusohje</label>
      <div class="col-sm-8">
        <textarea rows="2" class="form-control" id="drink-preparation">Sekoita ainesosat boolimaljassa. Lisää jäitä ja marjoja koristeeksi.</textarea>
      </div>
    </div>
    <div class="form-group">
      <label for="ingredient-1-amount" class="col-sm-2 control-label">Ainesosa: vodka</label>
      <div class="col-sm-8">
        <div class="input-group">
          <input type="number" id="ingredient-1-amount" class="form-control" aria-label="Ainesosan vodka määrä" value="500">
          <span class="input-group-addon">ml</span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label for="ingredient-2-amount" class="col-sm-2 control-label">Ainesosa: gin</label>
      <div class="col-sm-8">
        <div class="input-group">
          <input type="number" id="ingredient-2-amount" class="form-control" aria-label="Ainesosan gin määrä">
          <span class="input-group-addon">ml</span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label for="ingredient-3-amount" class="col-sm-2 control-label">Ainesosa: dry vermouth</label>
      <div class="col-sm-8">
        <div class="input-group">
          <input type="number" id="ingredient-3-amount" class="form-control" aria-label="Ainesosan dry vermouth määrä">
          <span class="input-group-addon">ml</span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label for="ingredient-4-amount" class="col-sm-2 control-label">Ainesosa: karpalomehu</label>
      <div class="col-sm-8">
        <div class="input-group">
          <input type="number" id="ingredient-4-amount" class="form-control" aria-label="Ainesosan karpalomehu määrä" value="500">
          <span class="input-group-addon">ml</span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label for="ingredient-5-amount" class="col-sm-2 control-label">Ainesosa: schweppes russchian</label>
      <div class="col-sm-8">
        <div class="input-group">
          <input type="number" id="ingredient-5-amount" class="form-control" aria-label="Ainesosan schweppes russchian määrä" value="1500">
          <span class="input-group-addon">ml</span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label for="ingredient-6-amount" class="col-sm-2 control-label">Ainesosa: karpalolikööri</label>
      <div class="col-sm-8">
        <div class="input-group">
          <input type="number" id="ingredient-6-amount" class="form-control" aria-label="Ainesosan karpalolikööri määrä" value="750">
          <span class="input-group-addon">ml</span>
        </div>
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Tallenna muutokset</button>
    <a class="btn btn-link" href="/drinks/1">Peruuta</a>
  </form>
</div>
<% include foot %>
