<% include head %>
<div class="container">
  <h1>Uusi drinkki</h1>
  <form action="/drinks/" method="post" class="form-horizontal">
    <div class="form-group">
      <label for="drinkName" class="col-sm-2 control-label">Drinkin nimi</label>
      <div class="col-sm-8">
        <input type="text" required class="form-control" id="drinkName" name="drinkName" />
      </div>
    </div>
    <div class="form-group">
      <label for="drinkPreparation" class="col-sm-2 control-label">Valmistusohje</label>
      <div class="col-sm-8">
        <textarea rows="2" required class="form-control" id="drinkPreparation" name="drinkPreparation"></textarea>
      </div>
    </div>
    <div class="form-group">
      <label for="drinkType" class="col-sm-2 control-label">Tyyppi</label>
      <div class="col-sm-8">
        <select id="drinkType" name="drinkType" class="form-control">
          <% locals.drinkTypes.forEach(function(drinkType) { %>
          <option value="<%= drinkType.id %>"><%= drinkType.name %></option>
          <% }); %>
        </select>
      </div>
    </div>
    <% if (locals.ingredients && locals.ingredients.length) { %>
    <%   locals.ingredients.forEach(function(ingredient) { %>
    <div class="form-group">
      <label for="ingredient-<%= ingredient.id %>-amount" class="col-sm-2 control-label">Ainesosa: <%= ingredient.name %></label>
      <div class="col-sm-8">
        <div class="input-group">
          <input type="number" min="0" id="ingredient-<%= ingredient.id %>-amount" name="ingredient-<%= ingredient.id %>-amount" class="form-control" aria-label="Ainesosan <%= ingredient.name %> määrä">
          <span class="input-group-addon">ml</span>
        </div>
      </div>
    </div>
    <%   }); %>
    <% } %>
    <button type="submit" class="btn btn-primary">Tallenna muutokset</button>
    <a class="btn btn-link" href="/drinks/">Peruuta</a>
  </form>
</div>
<% include foot %>
