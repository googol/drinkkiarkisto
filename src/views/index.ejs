<% include head %>
<div class="container">
  <h1>Drinkkiarkisto</h1>
  <p class="lead">Löydä suosikkidrinkkisi!</p>
  <div class="row">
    <% if (locals.drinks) { %>
      <% locals.drinks.forEach(function(drink, index, arr) { %>
        <div class="col-md-4">
          <% locals.drink = drink; %>
          <% include drink %>
        </div>
        <% if (index !== 0 && index !== arr.length - 1 && (index + 1) % 3 === 0) { %>
          </div>
          <div class="row">
        <% } %>
      <% }); %>
    <% } %>
  </div>
  <% if (locals.user) { %>
  <p><a href="/drinks/?new" class="btn btn-default btn-xs">Lisää uusi drinkki</a></p>
  <% } %>
</div>
<% include foot %>
